<h1>Products</h1>
<% if current_user && current_user.admin? %>
  <h2>Admin View</h2>
  <!-- Admin-specific content goes here -->
  <div id="products">
    <% @products.each do |product| %>
      <%= render product %>
      <p>
        <%= link_to "Show this product", product %>
      </p>
    <% end %>
  </div>
<%= link_to "New product", new_product_path %>
<% else %>
  <div id="products">
    <% @products.each do |product| %>
      <%= render product %>
      <p>
        <%= link_to "Show this product", product %>
      </p>
    <% end %>
  </div>
<% end %>

