<section class="container">
  <h2>Product Information</h2>
  <%= render @product %>
  <% if current_user&.admin? || current_user&.id == @product.user_id %>
    <%= button_to "Update Product", edit_product_path(@product), method: :get %>
    <%= button_to "Delete Product", @product, method: :delete, class: "danger" %>
  <% end %>
  <%= button_to "Back", products_path, method: :get, class: "warning" %>
</section>
