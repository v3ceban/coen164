<%= render @product %>
<div>
  <% if current_user&.admin? || current_user&.id == @product.user_id %>
    <%= button_to "Edit this product", edit_product_path(@product), method: :get %>
    <%= button_to "Destroy this product", @product, method: :delete, class: "danger" %>
  <% end %>
  <%= button_to "Back to products", products_path, method: :get %>
</div>
