<% @products.each do |product| %>
  <div id="product-<%= product.id %>" class="<%= cycle("list_line_odd", "list_line_even") %>">
    <p>
      <strong>Name:</strong>
      <%= product.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= product.description %>
    </p>
    <p>
      <strong>Image:</strong>
      <%= image_tag(product.image, alt: product.name) %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= product.price %>
    </p>
    <%= button_to("Add to cart", lineitems_path(product_id: product.id)) %>
  </div>
<% end %>
